<?xml version="1.0"?>
<config>
    <tabs>
        <lanot translate="label">
            <label>Lanot Extensions</label>
            <sort_order>200</sort_order>
        </lanot>
    </tabs>
    <sections>
        <lanot_easysticker>
            <class>separator-top</class>
            <label>Sticker</label>
            <tab>lanot</tab>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <view translate="label">
                    <label>Sticker Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable Lanot Sticker On Frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>

                        <allowed_attributes translate="label comment">
                            <label>Allowed Image Attributes</label>
                            <comment>Please, choose attributes. For chosen attributes will be added stickers</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>lanot_easysticker/product_attribute_source_images</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allowed_attributes>
                    </fields>
                </view>
            </groups>
        </lanot_easysticker>
    </sections>
</config>
